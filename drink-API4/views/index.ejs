<!DOCTYPE html>
<html>
<head>
  <title>Random Cocktail</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>🍸 Your Cocktail of the Moment</h1>

  <% if (drink) { %>
    <h2><%= drink.strDrink %></h2>
    <img src="<%= drink.strDrinkThumb %>" alt="<%= drink.strDrink %>" width="300">
    <h3>Instructions:</h3>
    <p><%= drink.strInstructions %></p>
    <h3>Ingredients:</h3>
    <ul>
      <% for (let i = 1; i <= 15; i++) {
           const ingredient = drink[`strIngredient${i}`];
           const measure = drink[`strMeasure${i}`];
           if (ingredient) { %>
        <li><%= measure %> <%= ingredient %></li>
      <% }} %>
    </ul>
  <% } else if (error) { %>
    <p><%= error %></p>
  <% } %>

  <a href="/">Get Another</a>
</body>
</html>